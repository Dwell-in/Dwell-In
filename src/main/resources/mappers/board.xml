<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.home.board.model.dao.BoardDao">

	<resultMap type="BoardDTO" id="boardMap">
		<id column="board_id" property="boardId" />
		<result column="category_id" property="categoryId" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="email" property="email" />
		<result column="view_count" property="viewCount" />
		<result column="reg_date" property="regDate" />
	</resultMap>


	<select id="selectBoard" resultMap="boardMap">
		select * from board
	</select>

	<select id="selectSearchBoard" resultMap="boardMap">
		select * from board
		where title like concat('%', #{search}, '%')
	</select>

	<select id="selectDetailBoard" resultMap="boardMap">
		select * from board
		<where>
			<if test="email!=null">
				board_id = #{boardId}
			</if>
		</where>
	</select>

	<update id="updateViewCount">
		UPDATE board
		SET view_count = view_count + 1
		WHERE board_id = #{boardId}
	</update>

	<update id="updateBoard">
		UPDATE board
		SET title = #{title}, content =
		#{content}
		WHERE board_id = #{boardId}

	</update>

	<insert id="insertBoard"
		parameterType="com.ssafy.home.board.model.dto.BoardDTO">
		INSERT INTO board (content, email, title, view_count,reg_date)
		VALUES (#{content}, #{email}, #{title}, 0, #{regDate})
	</insert>

	<delete id="deleteBoard">
		delete from board
		where board_id = #{boardId}

	</delete>

</mapper>